{
  "name": "wze-tournamentmanager",
  "version": "1.0.0",
  "description": "manage your wze tournaments, swiss style",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder",
    "rebuild": "electron-rebuild"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Avi-Karalis/WZE-Tournament-Manager.git"
  },
  "keywords": [
    "wze",
    "wargame",
    "manager",
    "warzone",
    "eternal",
    "mutant",
    "chronicles"
  ],
  "author": "Avi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Avi-Karalis/WZE-Tournament-Manager/issues"
  },
  "homepage": "https://github.com/Avi-Karalis/WZE-Tournament-Manager#readme",
  "dependencies": {
    "better-sqlite3": "^11.9.1",
    "cors": "^2.8.5",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "electron": "^35.1.5",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.wze.tournament-manager",
    "productName": "Tournament Manager",
    "icon": "./tournament-ui/src/assets/wze-gr.png",
    "files": [
      "server/**/*",
      "./data/**/*",
      "./lib/**/*",
      "tournament-ui/dist/**/*",
      "database.db"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "./tournament-ui/src/assets/wze-gr.png"
    }
  }
}
